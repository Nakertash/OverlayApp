<Window x:Class="OverlayApp.Modals.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OverlayApp.Modals"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="400">
    <Grid>
        <Label/>
        <Button Content="+" Click="AddPet"  Width="40" Height="30" HorizontalAlignment="Right"
            VerticalAlignment="Top" Margin="0,10,10,0"/>
        <ListBox x:Name="EditableList" Margin="10,56,10,40" ItemsSource="{Binding Items}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <DockPanel>
                        <TextBox Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="2" Padding="3"
                             BorderBrush="LightGray" BorderThickness="1"/>
                        <Button Content="✕"
                            DockPanel.Dock="Right"
                            Margin="3,0,0,0"
                            Padding="4,0"
                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=ListBox}}"
                            CommandParameter="{Binding}" />
                    </DockPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button Content="Сохранить" HorizontalAlignment="Right"
            VerticalAlignment="Bottom" Margin="0,0,10,10" Click="saveSettings"/>
    </Grid>
</Window>
